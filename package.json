{
  "name": "llm-mermaid-chat-workspace",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "pnpm dev:frontend",
    "dev:frontend": "pnpm --filter @mermaid-chat/client-app dev",
    "dev:backend": "cd backend && uv run fastapi dev src/mermaid_llm/main.py --port 8000",
    "build": "pnpm build:packages && pnpm build:frontend",
    "build:packages": "pnpm --filter './frontend/packages/**' build",
    "build:frontend": "pnpm --filter @mermaid-chat/client-app build",
    "test": "pnpm test:frontend && pnpm test:backend",
    "test:frontend": "pnpm -r --filter './frontend/**' test",
    "test:backend": "cd backend && uv run pytest",
    "typecheck": "pnpm -r typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix --unsafe",
    "format": "biome format . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@internal/shared-config": "workspace:*",
    "typescript": "^5.8.3"
  }
}
